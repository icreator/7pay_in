[Unit]
Description=uWSGI Emperor Service
After=syslog.target

[Service]
ExecStart=/usr/bin/uwsgi --ini /etc/uwsgi/uwsgi.ini
##ExecStart=/usr/bin/uwsgi --ini /etc/uwsgi/uwsgi.ini --pidfile /run/uwsgi.pid
###ExecStart=/usr/bin/uwsgi --ini /etc/uwsgi/uwsgi.ini --pidfile /run/uwsgi/uwsgi.pid --stats /run/uwsgi/stats

ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
##Restart=always
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
