#!/bin/sh

source $(dirname "$0")/include

COMMON_ARGS="-daemon -conf=daemon.conf"
#COMMON_ARGS="$COMMON_ARGS -txindex=1"

## --- Wallet(s) backup
#cd DAT
#for /D %%i in (*) do ( 
