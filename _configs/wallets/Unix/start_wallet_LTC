#!/bin/sh

source $(dirname "$0")/include

NAME=litecoin
APP_DIR=/opt/${NAME}/bin
PROC=${NAME}-qt
APP=$APP_DIR/$PROC
CONF=daemon.conf

ARGS="-conf=$CONF -txindex" #  -datadir=$DATA_DIR"
#ARGS="$ARGS -txindex=1"

main() {
    log "Starting $APP"
    runWallet
    delay 120
    ARGS="$ARGS -reindex"
    runWallet
}

main
